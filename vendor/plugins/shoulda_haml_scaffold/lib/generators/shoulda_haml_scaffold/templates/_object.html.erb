- content_tag_for :div, <%= singular_name %> do
  %ul
<% for attribute in attributes -%>
    %li
      %strong= _('<%= attribute.column.human_name %>:')
      =h <%= singular_name %>.<%= attribute.name %>
<% end -%>
    = link_to _('Show'), <%= singular_name %>
    = link_to _('Edit'), edit_<%= singular_name %>_path(<%= singular_name %>)
    = link_to _('Destroy'), <%= singular_name %>, :confirm => 'Are you sure?', :method => :delete
