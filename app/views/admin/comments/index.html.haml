%h1= 'Listing Comments'

= will_paginate @comments
 
%table
  %tr
    %th= 'Autor'
    %th= 'Treść'
    %th= 'Url'
 
  - for comment in @comments
    %tr
      %td= h comment.author
      %td= h comment.body
      %td= h comment.url
      %td
        = link_to 'Show', admin_comment_path(comment)
        = link_to 'Edit', edit_admin_comment_path(comment)
        = link_to 'Destroy', admin_comment_path(comment), :confirm => 'Are you sure?', :method => :delete

= will_paginate @comments
 
= link_to 'New Comment', new_admin_comment_path
