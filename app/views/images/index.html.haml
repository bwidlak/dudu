#headstrech
  %h1
    = image_tag header_for_gallery(@category.name), :alt => @category.name, :height => '54'
#teaser_text
  #container
    #gallery
      = will_paginate @images
      - @images.each do |image|
        %div.image_box
          .img{ :style => "background: white url('#{image.small_url}') no-repeat 50% 50%"}
            = link_to '', image.url, class: "fancybox", rel: "group"
      .clearfix

:javascript

  $(document).ready(function() {
    $(".fancybox").fancybox();
  });
